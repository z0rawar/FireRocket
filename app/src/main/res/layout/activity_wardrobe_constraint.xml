<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_add_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shirt"
    android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="339dp" />

    <Button
        android:id="@+id/btn_add_pant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    android:visibility="gone"

        android:text="Add Pant"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btn_add_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    android:visibility="gone"

        android:text="Add Favourite"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/btn_shuffle"
        android:layout_width="wrap_content"    android:visibility="gone"

        android:layout_height="wrap_content"
        android:text="Shuffle"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="346dp" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="256dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_shirts"
        android:layout_width="327dp"
        android:layout_height="188dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main2"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main2">

    </android.support.v4.view.ViewPager>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_pants"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main2"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main2"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp">

    </android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>

